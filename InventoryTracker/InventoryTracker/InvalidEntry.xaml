<Window x:Class="InventoryTracker.InvalidEntry"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:InventoryTracker"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        Title="InvalidEntry" Height="225" Width="400">
    <Grid Background="DarkGray">
        <TextBox HorizontalAlignment="Left" Height="42" Margin="100,50,0,0" TextWrapping="Wrap" 
                 Text="Invalid Entry" VerticalAlignment="Top" Width="200" TextAlignment="Center" 
                 FontSize="25" BorderBrush="Black" Background="LightGray" BorderThickness="1"
                 IsReadOnly="True"/>
        <Button Content="OK" HorizontalAlignment="Left" Height="32" Margin="160,125,0,0" VerticalAlignment="Top" 
                Width="80" Button.FontSize="20" Click="Ok_Button"/>
    </Grid>
</Window>
